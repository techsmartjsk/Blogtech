<% include headers %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit The Comment of<%= edit.text%></h1>
        <div style="width: 30%; margin: 25px auto; padding-top:30%;">
            <form action="/<%= edit._id%>/comments?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comments[text]"  value="<%=edit.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include footers %>

