<% include headers %>

 <div class="container"style="padding-top:10%; padding-bottom:10%;">
  <div>
    <h1 style=" font-size:3rem;">Create a New Blog</h1>
    <div
      class="container"
      style="width: 30%; margin: 25px auto; padding-top: 10%;"
    >
      <form action="/Myspace" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="Blog[title]"
            placeholder="Title"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="Blog[image]"
            placeholder="image url"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="Blog[content]"
            placeholder="Content"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/">Go Back</a>
    </div>
  </div>
</div> 

