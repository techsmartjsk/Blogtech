<% include headers %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center; font-size:3rem;">Add New Comment to <%= Blog.name %></h1>
        <div style="width: 30%; margin:50px auto; margin-left: 20%">
            <form action="/<%= Blog._id %>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comments[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include footers %>